{% extends  'main.twig' %}

{% block body %}
    <!-- content -->
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header"></h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>

        <!-- /.row -->
        <div class="row">
            {% if tools.tool is not null and tools.tool|length > 0 %}
                <!-- /.col-lg-4 -->
                {% for tool in tools.tool %}
                    <div class="col-lg-4">
                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <i class="fa fa-download fa-fw"></i> {{ tool.tool_name }}
                            </div>
                            <div class="panel-body">
                                <a class="list-group-item">
                                    <i class="fa fa-shopping-cart fa-fw"></i> Total products:
                                    <span class="pull-right text-muted small strong">
                                        <em>{{ tool.info.all_product_sum }}</em>
                                    </span>
                                </a>
                                <a class="list-group-item">
                                    <i class="fa fa-clock-o fa-fw"></i> Last synchronization date:
                                    <span class="pull-right text-muted small strong">
                                        <em>{{ tool.info.csv_upload_time > i ? tool.info.csv_upload_time|date('H:i d.m.Y') : 'Never' }}</em>
                                    </span>
                                </a>
                                <a class="list-group-item">
                                    <i class="fa fa-cloud-download fa-fw"></i> Last CSV size:
                                    <span class="pull-right text-muted small strong">
                                        <em>{{ tool.info.csv_upload_size }}</em>
                                    </span>
                                </a>
                                <a class="list-group-item">
                                    <i class="fa fa-ellipsis-v fa-fw"></i> Number of products in last CSV:
                                    <span class="pull-right text-muted small strong">
                                        <em>{{ tool.info.csv_product_sum }}</em>
                                    </span>
                                </a>
                                <a class="list-group-item">
                                    <i class="fa fa-ellipsis-v fa-fw"></i> Number of new products:
                                    <span class="pull-right text-muted small strong">
                                        <em>{{ tool.info.csv_new_product_sum }}</em>
                                    </span>
                                </a>
                                <a class="list-group-item">
                                    <i class="fa fa-ellipsis-v fa-fw"></i> Number of updated products:
                                    <span class="pull-right text-muted small strong">
                                        <em>{{ tool.info.csv_updated_product_sum }}</em>
                                    </span>
                                </a>
                                <a class="list-group-item">
                                    <i class="fa fa-ellipsis-v fa-fw"></i> Number of parsed products:
                                    <span class="pull-right text-muted small strong">
                                        <em>{{ tool.info.csv_parsed_product_sum }}</em>
                                    </span>
                                </a>
                            </div>
                            <div class="panel-footer">
                                <div class="list-group-item">
                                    <a class="text-center" href="{{ get_full_uri(tool.tool_name) }}">
                                        <i class="fa fa-gear "></i>
                                        <strong>Settings</strong>
                                        <i class="fa fa-angle-right"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.col-lg-4 -->
                {% endfor %}
            {% else %}
                <div class="alert alert-danger">
                    <h1><i class="fa fa-download x5"></i> No parsers</h1>
                </div>
            {% endif %}
        </div>
    </div>
    <!-- content -->
{% endblock %}